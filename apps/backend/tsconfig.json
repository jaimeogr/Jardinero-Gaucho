{
    "compilerOptions": {
      "strict": true,
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "types": ["node"],
      "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
  }
  